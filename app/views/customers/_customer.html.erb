<div class="column is-one-quarter">
  <div class="card">
    <div class="card-image has-text-centered p-3">
      <% if customer.image.attached? %>
        <figure class="image is-128x128 is-inline-block">
          <%= image_tag customer.image.variant(resize_to_limit: [200, 200]) %>
        </figure>
      <% else %>
        <figure class="image is-128x128 is-inline-block">
          <img src="https://via.placeholder.com/200x200?text=No+Image" alt="No image">
        </figure>
      <% end %>
    </div>

    <div class="card-content has-text-centered">
      <p class="title is-5"><%= customer.full_name %></p>
      <p><strong>Province:</strong> <%= customer.notes.presence || "Unknown" %></p>
      <p><%= customer.phone_number %></p>
      <p><%= customer.email_address.presence || "N/A" %></p>
    </div>
  </div>
</div>
